<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c4dbe0"
    tools:context=".Configuracion">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Barra superior con título -->
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="20dp">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/parrot2"
                android:contentDescription="Logo" />

            <ImageButton
                android:id="@+id/btn_volver"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_revert"
                android:background="@android:color/transparent"
                app:tint="@color/blue_menu"
                android:contentDescription="Volver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="CONFIGURACIÓN"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <!-- Contenido de configuración -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_bar"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sección: Idiomas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IDIOMAS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue_menu"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <!-- Idioma principal de la aplicación -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Idioma principal de la aplicación"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_idioma_principal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_spinner_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Idiomas preferidos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Idiomas preferidos para traducción"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_idiomas_preferidos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_spinner_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="8dp"/>

            <!-- Sección: Modo Offline -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FUNCIONALIDAD"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue_menu"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <!-- Modo Offline -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modo Offline"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usar traducciones sin conexión"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_modo_offline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/blue_menu"
                    app:trackTint="@color/lightblue_menu"/>
            </LinearLayout>

            <!-- Sonidos de interfaz -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sonidos de interfaz"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activar sonidos al usar la app"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_sonidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/blue_menu"
                    app:trackTint="@color/lightblue_menu"/>
            </LinearLayout>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="8dp"/>

            <!-- Sección: Historial -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HISTORIAL"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue_menu"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <!-- Botón ver historial -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ver_historial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver historial de traducciones"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green_menu"
                android:layout_marginBottom="16dp"/>

            <!-- Botón eliminar historial -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_eliminar_historial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar historial de traducciones"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/orange_menu"
                android:layout_marginBottom="24dp"/>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="8dp"/>

            <!-- Sección: Cuenta -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CUENTA"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue_menu"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <!-- Botón cambiar contraseña -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cambiar_contrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar contraseña"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green_menu"
                android:layout_marginBottom="16dp"/>

            <!-- Botón ver reportes  -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ver_reportes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver reportes"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green_menu"
                android:layout_marginBottom="16dp"/>

            <!-- Botón cuenta -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mi cuenta"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green_menu"
                android:layout_marginBottom="16dp"/>

            <!-- Botón cerrar sesión -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cerrar_sesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerrar sesión"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/orange_menu"
                android:layout_marginBottom="16dp"/>

            <!-- Botón eliminar cuenta -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_eliminar_cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️ Eliminar cuenta permanentemente"
                android:textColor="@android:color/white"
                app:backgroundTint="#D32F2F"
                android:layout_marginBottom="24dp"/>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="8dp"/>

            <!-- Sección: Administración -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADMINISTRACIÓN"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue_menu"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <!-- Botón administrar catálogos -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_admin_catalogos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚙️ Administrar Catálogos"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green_menu"
                android:layout_marginBottom="24dp"/>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="8dp"/>

            <!-- Sección: Acerca de -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACERCA DE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue_menu"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <!-- Botón información de la app -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_informacion_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Información de la aplicación"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green_menu"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>