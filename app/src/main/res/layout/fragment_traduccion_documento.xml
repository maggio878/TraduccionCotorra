<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TraduccionTexto"
    android:id="@+id/translation_frag"
    android:background="@drawable/app_bg_removed">

    <!-- Barra superior con título -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="20dp">
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/parrot2"
            android:contentDescription="Logo" />
        <ImageButton
            android:id="@+id/menu_button_config"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/settings2"
            android:background="@android:color/transparent"
            android:contentDescription="Menú" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="TRADUCCIÓN \nDE \n DOCUMENTO"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Search Bar - Positioned below top_bar -->
    <LinearLayout
        android:id="@+id/search_bar_documentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_searchbar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Buscar"
            android:src="@android:drawable/ic_menu_search" />

        <EditText
            android:id="@+id/et_buscar_documentos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Buscar documentos"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp" />
    </LinearLayout>
    <!-- Main Content Area (can be used for document list later) -->
    <!-- Recent Documents Section -->
    <FrameLayout
        android:id="@+id/recent_documents_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_bar_documentos"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="72dp">

        <!-- Section Title -->
        <TextView
            android:id="@+id/documentos_recientes_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Documentos recientes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Grid of Document Icons -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:columnCount="3"
            android:useDefaultMargins="true">

            <!-- Document 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_menu_report_image"
                    android:background="#E1F5FE"
                    android:padding="12dp"
                    android:contentDescription="PDF Document"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contrato.pdf"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <!-- Document 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:background="#F1F8E9"
                    android:padding="12dp"
                    android:contentDescription="Image Document"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recibo.jpg"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <!-- Document 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="#FFF3E0"
                    android:padding="12dp"
                    android:contentDescription="Text Document"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notas.txt"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <!-- Document 4 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_menu_slideshow"
                    android:background="#E8EAF6"
                    android:padding="12dp"
                    android:contentDescription="Presentation Document"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presentación.pptx"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <!-- Add more document buttons as needed -->
        </GridLayout>

        <!-- Empty State Message (shown when no recent documents) -->
        <TextView
            android:id="@+id/empty_documents_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No hay documentos recientes"
            android:textSize="16sp"
            android:textColor="#757575"
            android:visibility="gone"/>
    </FrameLayout>
    <!-- somehow add a grid and some resources so it can show the recent files with its data -->
</RelativeLayout>
