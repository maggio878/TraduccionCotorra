<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TraduccionDocumento"
    android:id="@+id/translation_frag"
    android:background="@drawable/app_bg_removed">

    <!-- Barra superior -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/parrot2"
            android:contentDescription="Logo" />

        <ImageButton
            android:id="@+id/menu_button_config"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/settings2"
            android:background="@android:color/transparent"
            android:contentDescription="Men칰" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="TRADUCCI칍N\nDE\nDOCUMENTO"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- ScrollView principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_marginBottom="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Bot칩n seleccionar documento -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_seleccionar_documento"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="游늯 Seleccionar Documento (PDF/Word)"
                android:textColor="@android:color/white"
                app:backgroundTint="@null"
                android:background="@drawable/button_orange_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Selecci칩n de idiomas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idioma origen:"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner_source_language"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_spinner_bg"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idioma destino:"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner_target_language"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_spinner_bg"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Layout de traducci칩n (oculto inicialmente) -->
            <LinearLayout
                android:id="@+id/layout_traduccion_documento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Texto extra칤do -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Texto extra칤do:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/et_texto_extraido"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:gravity="top|start"
                    android:hint="El texto del documento aparecer치 aqu칤..."
                    android:inputType="textMultiLine"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:scrollbars="vertical"
                    android:layout_marginBottom="16dp"/>

                <!-- Bot칩n traducir -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_traducir_documento"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="游깷 Traducir Documento"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/green_menu"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Texto traducido con bot칩n favorito -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Texto traducido:"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <ImageButton
                        android:id="@+id/btn_favorito_documento"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_star_outline"
                        android:contentDescription="Favorito"/>
                </RelativeLayout>

                <EditText
                    android:id="@+id/et_texto_traducido"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:gravity="top|start"
                    android:hint="La traducci칩n aparecer치 aqu칤..."
                    android:inputType="textMultiLine"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:scrollbars="vertical"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="16dp"/>

            <!-- Documentos recientes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOCUMENTOS RECIENTES"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue_menu"
                android:layout_marginBottom="12dp"/>

            <!-- Search bar -->
            <LinearLayout
                android:id="@+id/search_bar_documentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_searchbar_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Buscar"
                    android:src="@android:drawable/ic_menu_search" />

                <EditText
                    android:id="@+id/et_buscar_documentos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Buscar documentos"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Contenedor de documentos recientes -->
            <LinearLayout
                android:id="@+id/container_documentos_recientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Se agregar치n din치micamente -->
            </LinearLayout>

            <!-- Mensaje cuando no hay documentos -->
            <TextView
                android:id="@+id/tv_no_documentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No hay documentos recientes"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>