<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TraduccionTexto"
    android:id="@+id/translation_frag"
    android:background="@drawable/app_bg_removed">

    <!-- Barra superior con título -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/parrot2"
            android:contentDescription="Logo" />

        <ImageButton
            android:id="@+id/menu_button_config"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/settings2"
            android:background="@android:color/transparent"
            android:contentDescription="Menú" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="TRADUCCIÓN \nDE \n TEXTO"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/bottom_navigation"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ✅ Text input area con fondo visible -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/text_input_background"
            android:elevation="2dp">

            <EditText
                android:id="@+id/txt_TextoIngresado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="top|start"
                android:hint="Escribe o pega el texto aquí"
                android:textColorHint="#757575"
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:scrollbars="vertical" />
        </FrameLayout>

        <!-- Spacer pequeño -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- ✅ Translation area con fondo visible -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/text_output_background"
            android:elevation="2dp">

            <TextView
                android:id="@+id/txtv_TextoTraducido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="top|start"
                android:hint="Traducción"
                android:textColorHint="#757575"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:scrollbars="vertical" />

            <!-- ✅ Botón de favorito mejorado -->
            <ImageButton
                android:id="@+id/btn_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_button_bg"
                android:src="@drawable/ic_star_outline"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:contentDescription="Añadir a favoritos" />
        </FrameLayout>

        <!-- Spacer -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- ✅ Spinner area con botón de intercambio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Spinner idioma origen -->
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_source_language"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_spinner_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:contentDescription="Idioma de origen" />

            <!-- ✅ Botón de intercambio de idiomas -->
            <ImageButton
                android:id="@+id/btn_swap_languages"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/swap_button_bg"
                android:src="@drawable/ic_swap"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:contentDescription="Intercambiar idiomas" />

            <!-- Spinner idioma destino -->
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_result_language"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_spinner_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:contentDescription="Idioma de destino" />
        </LinearLayout>
    </LinearLayout>

    <!-- ✅ Espacio para el menú inferior (si lo tienes) -->
    <View
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>



