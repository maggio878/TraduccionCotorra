<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_removed"
    tools:context=".Reportes">

    <!-- Barra superior -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_volver"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_revert"
            android:background="@android:color/transparent"
            android:contentDescription="Volver" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="REPORTES"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/parrot2"
            android:contentDescription="Logo" />
    </RelativeLayout>

    <!-- Contenedor de selección con RadioButtons -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_selector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona el tipo de reporte:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"/>

            <RadioGroup
                android:id="@+id/radio_group_reportes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_idiomas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Idiomas más usados"
                    android:textSize="15sp"
                    android:checked="true"
                    android:paddingVertical="8dp"/>

                <RadioButton
                    android:id="@+id/radio_tipos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipos de traducción más usados"
                    android:textSize="15sp"
                    android:paddingVertical="8dp"/>
            </RadioGroup>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Contenedor del gráfico -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_grafico"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/card_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Título del gráfico -->
            <TextView
                android:id="@+id/tv_titulo_grafico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idiomas más usados"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginBottom="8dp"/>

            <!-- Contenedor para el gráfico (puedes usar MPAndroidChart o similar) -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp">

                <LinearLayout
                    android:id="@+id/container_grafico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Aquí irá tu gráfico (PieChart, BarChart, etc.) -->
                    <!-- Ejemplo con vista placeholder -->
                    <TextView
                        android:id="@+id/tv_grafico_placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:text="Aquí se mostrará el gráfico"
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"/>

                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>