<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/translation_layout"
    android:background="@drawable/fondo2">

    <!-- Barra superior con título -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/parrot2" />
        <ImageButton
            android:id="@+id/menu_button_config"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/settings2"
            android:background="@android:color/transparent"
            android:contentDescription="Menú" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="TRADUCCIÓN \nDE \n TEXTO"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"

            />
    </RelativeLayout>
    <!-- Card con el texto traducido -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTranslation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
                                    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="400dp"
            android:padding="20dp">

            <!-- Texto traducido -->
            <EditText
                android:id="@+id/etTranslatedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:gravity="start|top"
                android:hint="Texto traducido"
                android:inputType="textMultiLine"
                android:minLines="8"
                android:padding="0dp"
                android:textColor="#333333"
                android:textColorHint="#AAAAAA"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:contentDescription="Favorito"
                android:focusable="true"
                android:src="@drawable/ic_star_outline" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Selector de idioma -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLanguage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/cardTranslation"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_language_bg"
        android:text="Ingles"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:drawableEnd="@drawable/ic_dropdown"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center" />

</RelativeLayout>
