<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Historial"
    android:id="@+id/historial_frag"
    android:background="@drawable/app_bg_removed">

    <!-- Barra superior con título -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/parrot2"
            android:contentDescription="Logo" />

        <ImageButton
            android:id="@+id/menu_button_config"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/settings2"
            android:background="@android:color/transparent"
            android:contentDescription="Menú" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="HISTORIAL"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/search_bar_historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_searchbar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Buscar"
            android:src="@android:drawable/ic_menu_search" />

        <EditText
            android:id="@+id/et_buscar_historial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Buscar en historial"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Contenedor del historial -->
    <FrameLayout
        android:id="@+id/historial_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_bar_historial"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="72dp">

        <!-- Mensaje cuando no hay coincidencias -->
        <TextView
            android:id="@+id/no_coincidences_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No hay traducciones en el historial"
            android:textSize="16sp"
            android:textColor="#757575"
            android:visibility="gone"/>
    </FrameLayout>

</RelativeLayout>