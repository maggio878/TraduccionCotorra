<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Diccionario"
    android:id="@+id/translation_frag"
    android:background="@drawable/app_bg_removed">

    <!-- Barra superior con título -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="20dp">
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/parrot2"
            android:contentDescription="Logo" />
        <ImageButton
            android:id="@+id/menu_button_config"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/settings2"
            android:background="@android:color/transparent"
            android:contentDescription="Menú" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="DICCIONARIO"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Search Bar - Positioned below top_bar -->
    <LinearLayout
        android:id="@+id/search_bar_diccionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_searchbar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Buscar"
            android:src="@android:drawable/ic_menu_search" />

        <EditText
            android:id="@+id/et_buscar_definicion"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Buscar definicion"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp" />
    </LinearLayout>
    <!-- Main Content Area (can be used for document list later) -->
    <!-- Recent Documents Section -->
    <FrameLayout
        android:id="@+id/diccionario_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_bar_diccionario"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="72dp">

        <!-- Grid of palabras -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:columnCount="3"
            android:useDefaultMargins="true">
            <!-- Add more document buttons as needed -->
        </GridLayout>

        <!-- Empty State Message (shown when no recent documents) -->
        <TextView
            android:id="@+id/no_coincidences_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No hay palabaras que coincidan"
            android:textSize="16sp"
            android:textColor="#757575"
            android:visibility="gone"/>
    </FrameLayout>
    <!-- somehow add a grid and some resources so it can show the recent files with its data -->
</RelativeLayout>